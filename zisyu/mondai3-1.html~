<!DOCTYPE html>
<html>
  <!--
setIntervalを使ってsetcolorを一定時間ごとに呼び出している
    -->
  <head>
    <meta charset="utf-8">
    <script type="text/javascript">
      var nIntervId;

      function setcolor () {
      var color = Math.floor(Math.random() * 3);
      if(color == 0){
      document.getElementById("target").style.color="red";
      }else if(color == 1){
      document.getElementById("target").style.color="blue";
      }else if(color == 2){
      document.getElementById("target").style.color="yellow";
      }else{
      window.alert("unchi");
      }
      return;
      }

      function loop(){
      nIntervId = setInterval('setcolor()', 1000);
      }



    </script>
  </head>
  <body>
    <div id="target" onclick="loop()">aiueo</div>
  </body>
</html>
